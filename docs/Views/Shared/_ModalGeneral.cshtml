<!-- Modal para buscar la página correspondiente desde el visor -->
<div class="modal" tabindex="-1" role="dialog" id="goToModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <i class="ion-alert-circled icono-modal color-por-vencer colorModal-bg-amarillo"></i><h4 class="modal-title tit-modal">Ir a la página...</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="text" id="txtIndexTo" class="positive-integer" maxlength="3" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnIrA">Ir</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para descargar un nuevo documento desde el visor -->
<div class="modal fade" id="modal-descarga">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <i class="ion-alert-circled icono-modal color-por-vencer colorModal-bg-amarillo"></i><h4 class="modal-title tit-modal">Descargar un nuevo documento</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="col-6">
                    <form id="form-descarga-new" action="../Visor/ObtenerNuevoDocumento" method="post">
                        <div class="form-group">
                            <label for="desde">Desde</label>
                            <input type="text" id="desde" name="desde" class="positive-integer form-control" maxlength="3" required autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="hasta">Hasta</label>
                            <input type="text" id="hasta" name="hasta" class="positive-integer form-control" maxlength="3" required autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="nombre-doc">Nombre del nuevo documento</label>
                            <input type="text" id="nombre-doc" maxlength="20" class="form-control" name="nombre" required autocomplete="off">
                        </div>
                        <button type="submit" class="btn btn-primary" id="modal-btn-descargar">Descargar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

